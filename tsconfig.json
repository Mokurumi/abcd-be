{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./global.d.ts"],
  },
  "include": ["./src/**/*", "./global.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}